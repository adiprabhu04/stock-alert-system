# Symbols (comma-separated). Use .NS for NSE tickers.
SYMBOLS=RELIANCE.NS,TCS.NS,INFY.NS

# Absolute threshold alerts (edge-triggered). Set big number to disable globally.
ALERT_DEFAULT=999999
# Per-symbol overrides (example):
# ALERT_RELIANCE.NS=2400
# ALERT_TCS.NS=4000
# ALERT_INFY.NS=1700

# Percent jump alerts (set PCT_JUMP=0 to disable)
PCT_WINDOW_MIN=5
PCT_JUMP=0.7

# Only alert during NSE market hours (09:15–15:30 IST, Mon–Fri)
MARKET_HOURS_ONLY=true

# Twilio (optional; leave blank to log only)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
TWILIO_TO=
